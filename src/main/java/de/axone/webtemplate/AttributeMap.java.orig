package de.axone.webtemplate;

import java.util.HashMap;

import de.axone.tools.LA;
import de.axone.tools.SA;


public class AttributeMap extends HashMap<String,Object> {
	
		// == String =====
	public String getAsString( String name ){
		Object value = get( name );
		if( !( value instanceof String ) )
			throw new IllegalArgumentException( name + " is not 'String'" );
		return SA.get( (String)value, name );
	}
	public String getAsString( String name, String defaultValue ){
		return SA.get( getAsString( name ), name, defaultValue );
	}
	public String getAsStringRequired( String name ){
		return SA.getRequired( getAsString( name ), name );
	}
	public String getAsStringRequired( String name, String defaultValue ){
		return SA.getRequired( getAsString( name ), name, defaultValue );
	}
	
	// == Long =====
	public Long getAsLong( String name ){
		Object value = get( name );
		if( !( value instanceof Long ) )
			throw new IllegalArgumentException( name + " is not 'Long'" );
		return LA.getLong( (Long)value, name );
	}
	
	// == Integer =====
	public Integer getAsInteger( String name ){
		Long value = getAsLong( name );
		return LA.getInteger( value, name );
	}
	public Integer getAsInteger( String name, Integer defaultValue ){
		return LA.getInteger( getAsLong( name ), name, defaultValue );
	}
	public int getAsInt( String name, int defaultValue ){
		return LA.getInteger( getAsLong( name ), name, defaultValue );
	}
	public int getAsIntRequired( String name ){
		return LA.getIntegerRequired( getAsLong( name ), name );
	}
	public int getIntRequired( String name, Integer defaultValue ){
		return LA.getIntegerRequired( getAsLong( name ), name, defaultValue );
	}
}
